{
  "name": "remal-api-1",
  "version": "0.2.0",
  "description": "Remal API boilerplate",
  "license": "ISC",
  "main": "src/main.ts",
  "author": "Abdellah Allali <hi@allali.me>",
  "repository": {
    "type": "git",
    "url": "https://github.com/remaldev/backend-template.git"
  },
  "bugs": {
    "url": "https://github.com/remaldev/backend-template/issues"
  },
  "homepage": "https://github.com/remaldev/backend-template",
  "organization": "Remal",
  "contributors": [],
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "npx @biomejs/biome format --write src/",
    "lint": "npx @biomejs/biome lint src/",
    "test": "NODE_ENV=test jest --config ./test/jest.config.ts --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch --config ./test/jest.config.ts --detectOpenHandles",
    "test:cov": "NODE_ENV=test jest --coverage --config ./test/jest.config.ts --detectOpenHandles",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest.config.ts --selectProjects e2e --detectOpenHandles",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prepare": "husky",
    "deps:check": "npx -y depcheck@1.4.3",
    "deps:outdated:check": "npx check-outdated --ignore-pre-releases --columns name,current,latest",
    "deps:update:all": "npx npm-check-updates -u && npm install"
  },
  "prisma": {
    "seed": "ts-node prisma/prisma.seed.ts"
  },
  "engines": {
    "node": "^23.6.0",
    "npm": "^11.1.0"
  },
  "volta": {
    "node": "23.6.0",
    "npm": "11.1.0"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "npx @biomejs/biome format --write",
      "npx @biomejs/biome lint --fix"
    ],
    "schema.prisma": ["npx prisma format"]
  },
  "dependencies": {
    "@nestjs/common": "11.0.13",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.0.13",
    "@nestjs/platform-express": "11.0.13",
    "@nestjs/swagger": "11.1.0",
    "@prisma/client": "6.5.0",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "prisma": "6.5.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "swagger-ui-express": "5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@nestjs/cli": "11.0.5",
    "@nestjs/schematics": "11.0.2",
    "@nestjs/testing": "11.0.13",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.11.16",
    "@testcontainers/mongodb": "10.24.0",
    "@testcontainers/postgresql": "10.24.0",
    "@types/bcrypt": "5.0.2",
    "@types/express": "5.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.14.0",
    "@types/supertest": "6.0.3",
    "dotenv": "16.4.7",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.5.0",
    "source-map-support": "0.5.21",
    "supertest": "7.1.0",
    "testcontainers": "10.24.0",
    "ts-jest": "29.3.1",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.2"
  }
}
