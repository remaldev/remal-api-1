{
  "name": "remal-api-1",
  "version": "0.1.0",
  "description": "Remal API boilerplate",
  "license": "ISC",
  "main": "src/main.ts",
  "author": "Abdellah Allali <hi@allali.me>",
  "repository": {
    "type": "git",
    "url": "https://github.com/remaldev/backend-template.git"
  },
  "bugs": {
    "url": "https://github.com/remaldev/backend-template/issues"
  },
  "homepage": "https://github.com/remaldev/backend-template",
  "organization": "Remal",
  "contributors": [],
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "npx @biomejs/biome format --write src/",
    "lint": "npx @biomejs/biome lint src/",
    "test": "jest --config ./test/jest.config.ts --detectOpenHandles",
    "test:watch": "jest --watch --config ./test/jest.config.ts --detectOpenHandles",
    "test:cov": "jest --coverage --config ./test/jest.config.ts --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest.config.ts --selectProjects e2e --detectOpenHandles",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prepare": "husky",
    "deps:check": "npx -y depcheck@1.4.3",
    "deps:outdated:check": "npx check-outdated --ignore-pre-releases --columns name,current,latest"
  },
  "prisma": {
    "seed": "ts-node prisma/prisma.seed.ts"
  },
  "engines": {
    "node": "^23.6.0",
    "npm": "^11.1.0"
  },
  "volta": {
    "node": "23.6.0",
    "npm": "11.1.0"
  },
  "dependencies": {
    "@nestjs/common": "11.0.11",
    "@nestjs/config": "4.0.1",
    "@nestjs/core": "11.0.11",
    "@nestjs/platform-express": "11.0.11",
    "@nestjs/swagger": "11.0.6",
    "@prisma/client": "6.4.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "prisma": "6.4.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "swagger-ui-express": "5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@nestjs/cli": "11.0.5",
    "@nestjs/schematics": "11.0.2",
    "@nestjs/testing": "11.0.11",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.11.8",
    "@testcontainers/mongodb": "10.18.0",
    "@testcontainers/postgresql": "10.18.0",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.9",
    "@types/supertest": "6.0.2",
    "dotenv": "16.4.7",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "testcontainers": "10.18.0",
    "ts-jest": "29.2.6",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.2"
  }
}
