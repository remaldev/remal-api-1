{
  "name": "app",
  "version": "0.0.1",
  "description": "API boilerplate",
  "author": "Abdellah Allali <hi@allali.me>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "biome format --write src/",
    "lint": "biome lint src/",
    "test": "jest --config ./test/jest.config.ts --detectOpenHandles",
    "test:watch": "jest --watch --config ./test/jest.config.ts --detectOpenHandles",
    "test:cov": "jest --coverage --config ./test/jest.config.ts --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest.config.ts --selectProjects e2e --detectOpenHandles",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prepare": "husky",
    "deps:check": "npx -y depcheck@1.4.3",
    "deps:outdated:check": "npx check-outdated --ignore-pre-releases --columns name,current,latest"
  },
  "prisma": {
    "seed": "ts-node prisma/prisma.seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "11.0.10",
    "@nestjs/config": "4.0.0",
    "@nestjs/core": "11.0.10",
    "@nestjs/platform-express": "11.0.10",
    "@prisma/client": "6.4.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "prisma": "6.4.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@nestjs/cli": "11.0.5",
    "@nestjs/schematics": "11.0.1",
    "@nestjs/testing": "11.0.10",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.11.1",
    "@testcontainers/mongodb": "10.18.0",
    "@testcontainers/postgresql": "10.18.0",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.5",
    "@types/supertest": "6.0.2",
    "dotenv": "16.4.7",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "testcontainers": "10.18.0",
    "ts-jest": "29.2.6",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3"
  }
}
