{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "assist": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "error"
      },
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "useImportType": "off",
        "noNamespace": "error",
        "noNegationElse": "error",
        "noParameterProperties": "error",
        "noShoutyConstants": "error",
        "useBlockStatements": "error",
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": "error",
        "useFilenamingConvention": {
          "level": "off",
          "options": {
            "requireAscii": true,
            "filenameCases": ["kebab-case"]
          }
        },
        "useForOf": "error",
        "useShorthandAssign": "error"
      },
      "suspicious": {
        "noEmptyBlockStatements": "error",
        "useAwait": "error"
      },
      "performance": {
        "noBarrelFile": "error",
        "noReExportAll": "error"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "globals": [
      "it",
      "jest",
      "describe",
      "test",
      "expect",
      "beforeAll",
      "beforeEach",
      "afterAll",
      "afterEach",
      "CustomMatcherResult",
      "ErrorHandler",
      "ErrorMatcherOptions"
    ]
  },
  "files": {
    "includes": [
      "*.ts",
      "*.json",
      "tsconfig*.json",
      "prisma/prisma.seed.ts",
      "src/**/*.ts",
      "test/**/*.ts",
      "test/**/*.json"
    ],
    "ignoreUnknown": true
  }
}
